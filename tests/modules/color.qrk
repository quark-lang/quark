; STYLE CODES
(defn bold [x] 
  (+ "\x1b[1m" (+ x "\x1b[0m")))

(defn italic [x] 
  (+ "\x1b[3m" (+ x "\x1b[0m")))

(defn underline [x] 
  (+ "\x1b[4m" (+ x "\x1b[0m")))

