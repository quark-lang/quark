; BASIC COLORS
(defn black [x] 
  (+ "\x1b[30m" (+ x "\x1b[0m")))

(defn red [x] 
  (+ "\x1b[31m" (+ x "\x1b[0m")))

(defn green [x] 
  (+ "\x1b[32m" (+ x "\x1b[0m")))

(defn yellow [x] 
  (+ "\x1b[33m" (+ x "\x1b[0m")))

(defn blue [x] 
  (+ "\x1b[34m" (+ x "\x1b[0m")))

(defn magenta [x] 
  (+ "\x1b[35m" (+ x "\x1b[0m")))

(defn cyan [x] 
  (+ "\x1b[36m" (+ x "\x1b[0m")))

(defn white [x] 
  (+ "\x1b[37m" (+ x "\x1b[0m")))

; BRIGHT COLORS
(defn black_bright [x] 
  (+ "\x1b[90m" (+ x "\x1b[0m")))

(defn red_bright [x] 
  (+ "\x1b[91m" (+ x "\x1b[0m")))

(defn green_bright [x] 
  (+ "\x1b[92m" (+ x "\x1b[0m")))

(defn yellow_bright [x] 
  (+ "\x1b[93m" (+ x "\x1b[0m")))

